<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/myBackground</item>
        <item name="colorPrimaryDark">@color/myBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/calibri_font</item>
    </style>

    <style name="myLoaderStyle" parent="@style/Theme.AppCompat.Light">
        <item name="colorAccent">@color/myLoaderColor</item>
    </style>
    <style name="myBottomStyle" parent="@style/Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorWhite</item>
    </style>
    
    <style name="AppTheme.SlidrActivityTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>
