<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_height="wrap_content">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/list_user_userPicture"
        android:scaleType="centerCrop"
        app:riv_corner_radius="30dip"
        app:riv_border_width="3dip"
        app:riv_border_color="#333333"
        app:riv_oval="true"
        android:layout_width="55dp"
        android:layout_height="55dp"/>
    <TextView
        android:layout_toRightOf="@+id/list_user_userPicture"
        android:layout_toEndOf="@+id/list_user_userPicture"
        android:id="@+id/list_user_username"
        android:text="Rahul Jain"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_toRightOf="@+id/list_user_userPicture"
        android:layout_toEndOf="@+id/list_user_userPicture"
        android:text="Sent Friend Request"
        android:layout_below="@+id/list_user_username"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/list_user_userStatus"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp"
        android:id="@+id/user_list_addFriend"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_person_add"
        android:padding="3dp"
        android:background="@drawable/friend_request_background"
        android:layout_marginTop="15dp"
        android:layout_alignParentRight="true"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
</RelativeLayout>