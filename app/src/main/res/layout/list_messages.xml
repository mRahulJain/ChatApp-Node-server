<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/list_messages_friendPicture"
        android:scaleType="centerCrop"
        app:riv_corner_radius="30dip"
        app:riv_border_width="3dip"
        app:riv_border_color="#333333"
        android:src="@drawable/ic_person"
        app:riv_oval="true"
        android:layout_width="55dp"
        android:layout_height="55dp"/>
    <TextView
        android:id="@+id/list_messages_friendText"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@+id/list_messages_friendPicture"
        android:layout_toEndOf="@+id/list_messages_friendPicture"
        android:text="Hello"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Hello"
        android:layout_toLeftOf="@+id/list_messages_userPicture"
        android:layout_toStartOf="@+id/list_messages_userPicture"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_centerInParent="true"
        android:textSize="18sp"
        android:id="@+id/list_messages_userText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/list_messages_userPicture"
        android:scaleType="centerCrop"
        app:riv_corner_radius="30dip"
        app:riv_border_width="3dip"
        android:layout_alignParentRight="true"
        app:riv_border_color="#333333"
        android:src="@drawable/ic_person"
        android:layout_alignParentEnd="true"
        app:riv_oval="true"
        android:layout_width="55dp"
        android:layout_height="55dp"/>

</RelativeLayout>