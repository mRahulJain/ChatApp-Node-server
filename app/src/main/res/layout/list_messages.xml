<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="5dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/editTextBackground"
        android:id="@+id/list_messages_secureText"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="12sp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textColor="@color/colorDullWhile"
            android:gravity="center"
            android:text="This conversation is end to end encrypted."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_below="@id/list_messages_secureText"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal"
        android:id="@+id/list_message_main_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/list_messages_friendPicture"
            android:scaleType="centerCrop"
            app:riv_corner_radius="30dip"
            android:layout_gravity="bottom"
            android:src="@drawable/user_image"
            app:riv_border_width="3dip"
            android:layout_centerVertical="true"
            app:riv_border_color="#333333"
            app:riv_oval="true"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <TextView
            android:padding="12dp"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:id="@+id/list_messages_friendText"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            android:layout_toRightOf="@+id/list_messages_friendPicture"
            android:layout_toEndOf="@+id/list_messages_friendPicture"
            android:text="Hello"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/list_messages_secureText"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginRight="3dp"
            android:id="@+id/list_message_main_user"
            android:layout_marginEnd="3dp"
            android:gravity="bottom"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Hello"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:id="@+id/list_messages_userText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="bottom|right"
                android:textColor="@color/colorGray"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_single_tick"
                android:id="@+id/list_messages_seenMessage"
                android:layout_width="15dp"
                android:layout_height="15dp"/>
        </LinearLayout>
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/list_messages_userPicture"
            android:scaleType="centerCrop"
            app:riv_corner_radius="30dip"
            android:layout_gravity="bottom"
            app:riv_border_width="3dip"
            android:layout_centerVertical="true"
            app:riv_border_color="#333333"
            android:src="@drawable/user_image"
            app:riv_oval="true"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
    </LinearLayout>
</RelativeLayout>