<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textSize="22sp"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:text="Change Profile Photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:layout_margin="12dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/myColorRed"
                app:cardCornerRadius="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/fragment_bottom_change_photo_removePhoto"
                    android:padding="10dp"
                    android:src="@drawable/ic_delete_forever"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:text="Remove\nphoto"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/colorBlack"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_margin="12dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/fragment_bottom_change_photo_camera"
                android:padding="10dp"
                android:src="@drawable/ic_camera"
                android:background="@drawable/badge_view"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <TextView
                android:gravity="center"
                android:text="Camera"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/colorBlack"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_margin="12dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/myColorGreen"
                app:cardCornerRadius="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/fragment_bottom_change_photo_gallery"
                    android:padding="10dp"
                    android:src="@drawable/ic_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:gravity="center"
                android:text="Gallery"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/colorBlack"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>